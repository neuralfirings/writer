<div class="jumbotron" style="background: transparent; padding-top: 0px; margin-top: 0px;">
  <div class="container">
    <% if user_signed_in? %>
      <div class="user-heading pull-right" style="color: #AAA">
        Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to 'Edit profile', edit_user_registration_path %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
      <% if @logs %>
        <h1 style="color: #AAA">Words Per Day</h1>
        <canvas class="chart-words" id="chart-words-all" width="600px" height="400px" style="width: 100%"
          data-show="wc_per_day" 
          data-path="<%= get_logs_pieces_path %>" 
        ></canvas>
        <br />
        <p><a class="btn btn-primary btn-lg pull-right" href="<%= pieces_path %>" role="button">Start Writing <i class="fa fa-arrow-circle-right"></i></a></p>
        <div class="clearfix"></div>
        <br />
        <h1 style="color: #AAA">Minutes Per Day</h1>
        <canvas class="chart-words" id="chart-time" width="600px" height="400px" style="width: 100%"
          data-show="minutes" 
          data-path="<%= get_logs_pieces_path %>" 
        ></canvas>
        <br />
        <p><a class="btn btn-primary btn-lg pull-right" href="<%= pieces_path %>" role="button">Start Writing <i class="fa fa-arrow-circle-right"></i></a></p>
        <div class="clearfix"></div>
        <br />
        <br />
      <% end %>
    <% else %>
      <br /><br /><br />
        <h1 style="color: #AAA">Write some stuff.<br />Track progress.<br />Eat.<br />Poop.<br />Repeat.
        </h1><!-- <img src=""> -->
        <div class="pull-leftx">
          <%= link_to "Login", new_user_session_path, :class => 'btn btn-primary btn-lg btn-superbig'  %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-default btn-lg btn-superbig'  %>
        </div>
        <div class="clearfix"></div>
    <% end %>
  </div>
</div>