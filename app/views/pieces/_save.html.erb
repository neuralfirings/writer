<div class="input-group">
  <span class="input-group-btn">
    <a class="update btn btn-default" role="button" href="/"><i class="fa fa-home"></i></a>
    <a class="save btn btn-default" role="button" href="<%= pieces_path %>"><i class="fa fa-file-o"></i></a>
  </span>
  <% if is_new %>
    <input type="text" class="piece-folders form-control" placeholder="this, that" value="">
  <% else %>
    <input type="text" class="piece-folders form-control" placeholder="this, that" value="<%= @piece.folder_list %>">
  <% end %>
  <span class="input-group-btn">
    <% if is_new %>
      <a class="save btn btn-default" role="button" data-path="<%= pieces_path %>" data-title=".piece-title" data-body=".piece-body"><i class="fa fa-floppy-o"></i></a>
    <% else %>
      <a class="update btn btn-default" role="button" data-path="<%= piece_path %>" data-title=".piece-title" data-body=".piece-body"><i class="fa fa-floppy-o"></i></a>
    <% end %>
    <%= render partial: "pos" %>
  </span>
</div>